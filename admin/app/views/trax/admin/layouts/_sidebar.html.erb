<div class="sidebar" id="sidebar" ng-controller="SidebarController" ng-show="$root.sidebar_visible">
  <div class="sidebar-menu nav-collapse">
    <div class="divide-20"></div>
    <!-- SEARCH BAR -->
    <div id="search-bar">
      <input type="text" placeholder="Search" class="search"><i class="fa fa-search search-icon"></i>
    </div>
    <!-- /SEARCH BAR -->

    <!-- SIDEBAR MENU -->
    <ul>
      <li ng-repeat="item in items">
        <a ui-sref="{{item.path}}">
          <i class="fa fa-{{item.icon_class}} fa-fw"></i> <span class="menu-text">{{item.name}}</span>
          <span class="selected"></span>
        </a>
      </li>
    </ul>
    <!-- /SIDEBAR MENU -->
  </div>
</div>